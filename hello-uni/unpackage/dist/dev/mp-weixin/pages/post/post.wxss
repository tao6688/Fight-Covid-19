/* 水平间距 */
page {
  background-color: #f5f5f5;
}
.post-page {
  position: relative;
}
.post-page .top-area {
  position: relative;
  width: 100%;
  height: 320rpx;
  background: url("https://img1.imgtp.com/2022/10/03/ychIeyli.jpg") no-repeat center;
  background-size: 100% 100%;
}
.post-page .top-area input {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 80%;
  height: 84rpx;
  background-color: #ffffff;
  border: 2rpx solid #BFBFBF;
  border-radius: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #767676;
}
.post-page .classify {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  background-color: #ffffff;
  line-height: 80rpx;
}
.post-page .classify .classify-item {
  padding: 0 30rpx;
  text-decoration: none;
  font-size: 30rpx;
  color: #3D3D3D;
}
.post-page .classify .active {
  color: #3662EC;
}
.post-page .post-list {
  width: 100%;
  background-color: #fff;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}
.post-page .post-list .post-list-item {
  width: 100%;
  border: 2rpx solid #f1f1f1;
  border-radius: 16rpx;
  padding: 16rpx 20rpx 5rpx 20rpx;
  box-sizing: border-box;
  box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
  margin-bottom: 20rpx;
}
.post-page .post-list .post-list-item .item-title {
  color: #000;
  font-size: 34rpx;
  font-weight: 600;
}
.post-page .post-list .post-list-item .item-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
  margin-top: 20rpx;
}
.post-page .post-list .post-list-item .item-wrapper image {
  width: 130rpx;
  margin-right: 30rpx;
}
.post-page .post-list .post-list-item .item-wrapper .item-introdution {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.post-page .post-list .post-list-item .item-features {
  width: 60%;
  display: flex;
  justify-content: flex-end;
  flex-direction: row;
  width: 100%;
  height: 40rpx;
}
.post-page .post-list .post-list-item .item-features .feature {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 10rpx;
}
.post-page .post-list .post-list-item .item-features .feature image {
  width: 30rpx;
  height: 30rpx;
}
.post-page .post-list .post-list-item .item-features .feature .num {
  font-size: 24rpx;
}
.post-page .go-to-post {
  position: fixed;
  right: 50rpx;
  bottom: 110rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: #38bfff;
  border-radius: 50%;
  padding: 25rpx;
  box-sizing: border-box;
  box-shadow: rgba(0, 0, 0, 0.25) 0px 14px 28px, rgba(0, 0, 0, 0.22) 0px 10px 10px;
}
.post-page .go-to-post image {
  width: 100%;
}

