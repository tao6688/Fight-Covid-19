/* 水平间距 */
page {
  background-color: #f5f5f5;
}
.edit-page .top-area {
  width: 100%;
  height: 320rpx;
  background: url("https://img1.imgtp.com/2022/10/03/ychIeyli.jpg") no-repeat center;
  background-size: 100% 100%;
}
.edit-page .edit-area {
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.edit-page .edit-area .edit-item {
  margin-bottom: 20rpx;
}
.edit-page .edit-area .edit-item .outline {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.edit-page .edit-area .edit-item input {
  margin: auto;
  width: 95%;
  height: 80rpx;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.edit-page .edit-area .edit-item textarea {
  margin: auto;
  width: 95%;
  height: 400rpx;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.edit-page .edit-area .post-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 95%;
  height: 80rpx;
  font-size: 28rpx;
  background-color: #38bfff;
  color: #fff;
}

